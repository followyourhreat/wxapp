/* pages/equipment/setting/firmware_upgrade/firmware_upgrade.wxss */
.upgrade_List{
  background: #f5f5f5;
  margin-bottom: 80rpx
}
.upgrade_List .cell{
  width: 100%;
  height: 100rpx;
  display: flex;
  background: #ffffff;
  align-items: center;
  margin-bottom: 2rpx;
  justify-content: space-between;
  padding: 0 44rpx
}
.upgrade_List .cell .title {
  font-size: 32rpx;
  color: #333333;
}

.upgrade_List .cell .versions{
  font-size: 32rpx;
color: #969FA9;
}
.upgrade_List .cell .versions text{
  color:#C81D01;
  margin-left: 10rpx
}

.upgrade_btn{
  width: 560rpx;
  margin: 0 auto
}

.upgrade_modal{
  width: 540rpx;
  height: 434rpx;
  background:#ffffff;
  border-radius: 42rpx;
  position: absolute;
  top:144rpx;
  z-index: 11;
  left: 50%;
  margin-left: -270rpx
}

.upgrade_mask{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.2);
  z-index: 10

}

.upgrade_modal .img{
  width: 100%;
  height: 280rpx;
  display: flex;
  justify-content: center;
  align-items: center
}
.upgrade_modal .img image{
  width: 244rpx;
  /* height: 203rpx */
}

.upgrade_progress{
  width: 90%;
  margin: 0 auto
}
.hintTitle{
  font-size: 32rpx;
color: #C81D01;
text-align: center;
margin-top: 20rpx
}