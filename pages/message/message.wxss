/* pages/message/message.wxss */
.message_wrap{
  background: #f5f5f5
}
.cell-class {
  display: block;
  width: 100%;
  margin-bottom: 2rpx;
}

.message_cell{
  width: 100%;
  height: 100%;
  padding: 27rpx 54rpx;

}
.cell-class .spot{
  width: 24rpx;
  height: 24rpx;
  background: #FA4444;
  border-radius: 50%;
  position: absolute;
  top: 40rpx;
  left: 20rpx

}
.message_cell .mess_title_wrap{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx
}
.message_cell .mess_title_wrap .mess_title{
  font-size: 32rpx;
  color: #3D464E;
  font-weight: 600
  }

.message_cell .mess_title_wrap .mess_time{
font-size: 28rpx;
color: #C1C1C1;
}

.message_cell .mess_content{
  font-size: 28rpx;
  width: 100%;
  white-space: pre-line;
  color: #C1C1C1;
}